<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <% if params[:plan] == 'pro' %>
      <h1>Pro Account</h1>
      <p>Sign up for the pro account $10/month for all feature access</p>
    <% else %>
      <h1>Basic Account</h1>
      <p>Sign up for free and get basic access to the community</p>
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sign up</h2>
      
      <% if params[:plan] == 'pro' %>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div><!-- end .well -->
  </div><!-- end .col-md-4 col-md-offset-4 -->
</div><!-- end .row -->
