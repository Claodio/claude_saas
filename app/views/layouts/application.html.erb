  <head>
    <title>Claude Saas</title>
    <%= stylesheet_link_tag    'application', media: 'all' => true %>
    <%= javascript_include_tag 'application'%>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div style="display:none"; id="operamini" class="message">
            <p>Sorry, but this website does not support Opera Mini. Please switch to browser such as Opera for Android, Chrome, Firefox, or Safary</p>
    </div>
    <!--[if lte IE 7]>
       <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
    <![endif]-->
    
    <header role="banner">
        <div class="container">
          <%= link_to root_path do %>
            <img class="navbar-brand visible-xs visible-sm" alt="Ziptales" src="img/ziplogo.png">
            <img height="78px;" width="417" class=" visible-md visible-lg" src="img/ziptales.png" alt="Ziptales'">
          <% end %>
          <div class="utility-nav">
            <ul>
              <li>
                <a target="_blank" href="#">
                  <span>Follow us on here</span>
                  <i class="icon fa"></i>
                </a>
              </li> 
              <li>
                <a target="_blank" href="https://plus.google.com/b/102047394736458742209/102047394736458742209/posts">
                  <span class="icon fa fa-google-plus"></span>
                </a>
              </li>
              <li>
                <a target="_blank" href="https://twitter.com/ziptales">
                  <span class="icon fa fa-twitter"></span>
                </a>
              </li>
              <li>
                <a target="_blank" href="https://www.facebook.com/ziptales">
                  <span class="icon fa fa-facebook"></span>
                </a>
              </li>
            </ul>
            <ul>
              <% if current_user  %>
                <li>
                    <i class="icon fa fa-user fa-lg well btn"></i>
                    <%= button_to "Sign Out", destroy_user_session_path, mehod: :delete %>
                </li>
              <li>
                  <a title="View Cart" href="#">
                    <i class="icon fa fa-shopping-cart fa-lg well btn"></i> 
                    <span>View Cart</span>
                  </a>
                </li>
              <% else %>
                <li>
                    <i class="icon fa fa-user fa-lg well btn">
                      <%= link_to "Log In", new_user_session_path,  method: :get  %>
                    </i>
                </li>
                <li><!-- btn btn-primary navbar-btn-->
                    <i class="fa fa-users well btn">
                      <%= link_to "Register", new_user_registration_path, method: :get  %>
                    </i>
                </li>
                
              <% end %>
            </ul>
            <div id="fb-root"></div>
            <div data-share="false" data-show-faces="false" data-action="like" data-layout="standard" data-width="300" data-href="" class="fb-like"></div>        
          </div><!-- /.utility-nav -->
        </div><!-- /.container-->
        <nav class="navbar navbar-default navbar-static-top" role="navigation">
         <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <%= link_to root_path, class:"navbar-brand" do %>
              <i class="fa fa-users"></i>
              SaaS Logo
              <% end %>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="main-navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
              <li> <%= link_to "About", about_path %></li>
              <li> <%= link_to "Contact Us", new_contact_path %></li>
            </ul>
          </div><!-- /.navbar-collapse -->
          </div><!-- /.container-->
       </nav>
    </header>
    <main>
      <div class="container">
        <% flash.each do |key, value| %>
          <%= content_tag :div, value, class: "alert alert-#{key}" %>
        <% end %>
        <%= yield %>
      </div>
    </main>
    
    <footer role="footer">
	        <p><small>Copyright &copy; Claude Akakpo Freelencer</small></p>
	  </footer>
